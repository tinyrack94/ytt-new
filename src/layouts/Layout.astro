---
import '../styles/global.css';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { DEFAULT_LANGUAGE } from '@/constants';
import { useTranslations } from '@/i18n/utils';
import LanguageSelector from '@/components/language-selector';

const currentLocale = Astro.currentLocale ?? DEFAULT_LANGUAGE.CODE;
const INDEX_URL = getRelativeLocaleUrl(currentLocale, '');
const APP_URL = getRelativeLocaleUrl(currentLocale, 'app');
const t = useTranslations(currentLocale);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <meta http-equiv="refresh" content="0;url=/en/" /> -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>YTT</title>
  </head>
  <body class="h-dvh w-full">
    <div class="flex flex-1 justify-between p-2">
      <h1 class="font-bold">{t('app.name')}</h1>
      <div class="flex gap-2">
        <a href={INDEX_URL}>{t('app.nav.home')}</a>
        <a href={APP_URL}>{t('app.nav.app')}</a>
        <LanguageSelector client:idle />
      </div>
    </div>
    <slot />
  </body>
</html>
